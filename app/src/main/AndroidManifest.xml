<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oop2.p2.canteen">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />




    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/aau_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/aau_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgotPassActivity"></activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".MakeMenuActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".ShowingMeal" />
        <activity android:name=".AddingMeal" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ChooseMenuActivity" />
    </application>

</manifest>